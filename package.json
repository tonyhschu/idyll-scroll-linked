{
  "name": "idyll-intro",
  "version": "1.0.0",
  "scripts": {
    "start": "idyll -r index.idl --defaultComponents ./components/default --css styles.css --theme github --spellcheck --watch",
    "build": "idyll -n -r index.idl --defaultComponents ./components/default --theme github --css styles.css",
    "deploy": "npm run build && gh-pages -d ./build"
  },
  "dependencies": {
    "d3": "^4.10.2",
    "idyll": "^1.12.0",
    "idyll-vega-lite": "^1.0.1",
    "vega": "^3.0.2",
    "vega-lite": "^2.0.0-rc1"
  },
  "devDependencies": {
    "gh-pages": "^0.12.0"
  }
}
